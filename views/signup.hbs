<div class="border-bottom mx-auto " style="width: 40%;">
    <h1 class="text-center sign-color" >Créer un compte</h1>
</div>
<div class="container mt-3 ">
    <div class=" px-auto">
        <form action="/" method="POST" enctype="multipart/form-data">
            <div class="form-row ">
                <div class="form-group col-md-12">
                    <label for="inputEmail">Adresse Email</label>
                    <input type="email" class="form-control" id="inputEmail">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="name">Nom d'utilisateur</label>
                    <input type="input" class="form-control" id="name">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="password">Mot de passe</label>
                    <input type="input" class="form-control" id="password">
                </div>
                <div class="form-group col-md-6">
                    <label for="conf-password">Confirmer le mot de passe</label>
                    <input type="input" class="form-control" id="conf-password">
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Je déclare accepter les termes des conditions générales de services et d’utilisation ainsi que
                        la politique de confidentialité
                    </label>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="g-recaptcha" data-sitekey="your_site_key">

                    </div>
                </div>

                <div class="col-md-6">
                    <input type="submit" value="Valider le captcha">
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-sign">Je m'inscris</button>
                </div>
            </div>
        </form>
    </div>
</div>
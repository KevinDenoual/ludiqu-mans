<section class="item">
    <div class="container">
        <div class="row">
            <!-- GET -->
            <div class="col-md-3">
                <h1>Tout les jeux</h1>
                <div class="card">
                    <div class="card-body">

                        <ul class="list-group list-group-flush">
                            {{#each item }}
                            <li class="list-group-item">
                                <h3>{{ this.title }}</h3>
                                <p>{{this.category.title}}</p>                               
                                <img src="{{image}}" alt="" style="max-width: 100px;">
                            </li>
                            {{/each }}
                        </ul>

                    </div>
                </div>
            </div>
        </div>

</section>
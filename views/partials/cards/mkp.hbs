{{!------------ card d'annonce ------------------}}
<div class="card card-actu mx-4">
     <div class=" mt-3">
        <h5 class="card-title text-center">{{title}}</h5>
    </div>
    <img class="card-img-top " src="https://picsum.photos/480/480" alt="Card image cap">
    <div class="card-body">
        <p class="card-text"> {{ content }}</p>
        <button type="button" class="btn btn-mkp m-1" data-toggle="modal" data-target="#modalContactVendeur"
            data-whatever="@getbootstrap">Contacter le vendeur</button>
        <a href="/contact"><button class="btn btn-mkp m-1" type="submit">Signaler</button></a>

{{#if isModo}}
        <button type="submit" class="btn btn-mkp m-1" data-toggle="modal"
            data-target="#modalConfirmSuppMkp{{_id}}">Supprimer</button>
{{/if}}
    </div>
    <div class="card-footer">
        <small class="text-muted">Publié le {{ moment createDate format="DD-MM-YY" }}</small>
    </div>
</div>








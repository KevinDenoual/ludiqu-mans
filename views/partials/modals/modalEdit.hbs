<button type="button" class="btn btn-actu" data-toggle="modal" data-target="#modalEditer">Modifier</button>


<div class="container mt-3">
    <div class="row text-center">
        <div class="modal fade" id="modalEditer" tabindex="-1" role="dialog" aria-labelledby="modalEditerLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"> </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/jeuSinlge/{{_id}}?_method=PUT" method="post">
                            <div class="form-group">
                                <label>Title</label>
                                <input class="form-control" type="text" name="title" value="{{title}}">
                            </div>
                            <div class="form-group">
                                <label>Content</label>
                                <input class="form-control" type="text" name="content" value="{{content}}">
                            </div>


                            <div class="file">
                                <label class="file-label">
                                    <input class="file-input" type="file" name="image">
                                    <span class="file-cta">
                                        <span class="file-icon">
                                            <i class="fas fa-upload"></i>
                                        </span>
                                        <span class="file-label">
                                            Envoyer une nouvelle image au format .jpg .jpeg .gif uniquement
                                        </span>
                                    </span>
                                </label>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-sign" data-dismiss="modal">Fermer</button>
                                <button type="submit" class="btn btn-sign">Confirmer la modification</button>
                            </div>
                        </form>
                    </div>


                </div>
                
            </div>
        </div>
    </div>
</div>
</div>
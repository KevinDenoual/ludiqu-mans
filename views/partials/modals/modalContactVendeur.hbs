{{!-- Modal bouton contacter le vendeur --}}
<div class="modal fade" id="modalContactVendeur" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalContactVendeurl">Formulaire de contact</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Email de contact</label>
                        <input type="email" class="form-control" id="modalContactVendeur"
                            placeholder="name@example.com">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Votre message</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sign" data-dismiss="modal">Fermer</button>
                <button type="button" class="btn btn-sign">Envoyer le message</button>
            </div>
        </div>
    </div>
</div>
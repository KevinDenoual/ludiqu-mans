{{!-- Modal bouton contacter le vendeur --}}
<div class="modal fade" id="modalContactVendeur{{_id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" >Formulaire de contact</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Email de contact {{title}}</label>
                        <input type="email" class="form-control"
                            placeholder="name@example.com">
                    </div>
                    <div class="form-group">
                        <label>Votre message</label>
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sign" data-dismiss="modal">Fermer</button>
                <button type="button" class="btn btn-sign">Envoyer le message</button>
            </div>
        </div>
    </div>
</div>
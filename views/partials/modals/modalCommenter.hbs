{{!-- modal commenter --}}
<div class="modal fade" id="modalCommenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ajouter un commentaire</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{!-- Formulaire Commentary POST --}}
                <form action="/commentaire" method="POST">
                    <div class="rating form-group">
                        <p>Votre note</p>
                        <input type="text">
                        <div class="stars">
                            <i class="far fa-star gold"></i>
                            <i class="far fa-star gold"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="commentaire-text" class="col-form-label">Votre commentaire</label>
                        <textarea class="form-control" id="commentaire-text" type="text" name="content"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="commentaire-text" class="col-form-label">Votre commentaire</label>
                        <input class="form-control" id="commentaire-text" type="text" name="author"></textarea>
                    </div>
                </form>
                {{!-- / Formulaire Commentary POST --}}
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sign" data-dismiss="modal">Fermer</button>
                <button type="button" class="btn btn-sign">Poster le commentaire</button>
            </div>

        </div>
    </div>
</div>
<section class="item">
    <div class="border-bottom mx-auto " style="width: 40%;">
        <h1 class="text-center text-warning">liste des utilisateurs</h1>
    </div>
    <div class="container">
        <div class="row">
            <!-- GET -->
            <div class="col-md-12 col-sm-12">
                <ul class="list-group ">
                    {{#each dbuser }}
                    <li class="list-item border border-warning rounded m-2 p-3">
                        <div class="row">
                            <div class="col-md-3 col-sm-3  column">
                                <h3>{{name}}</h3>
                            </div>
                            <div class="col-md-7 pt-4 col-sm-7">
                                <p>{{email}} </p>
                                <p>date d'inscription : {{moment createDate format="DD-MM-YY"}} </p>
                                <p> Utilisateur vérifié : {{isVerified}} </p>
                                <p> Modérateur : {{isModo}} </p>
                                <p>Admin : {{isAdmin}} </p>
                                <p> Bannis : {{isBan}} </p>
                            </div>
                            <div class="col-md-2 pt-4 col-sm-2">
                                <button class="btn btn-actu" data-toggle="modal" data-target="#modalEditerUser{{_id}}"
                                    type="submit">Modifier</button>
                            </div>
                    </li>
                    {{/each }}
                </ul>
            </div>
        </div>
    </div>
</section>


{{!-- Modal Editer Article --}}
<div class="container mt-3">
    <div class="row text-center">
        <div class="modal fade" id="modalEditerUser{{_id}}" tabindex="-1" role="dialog"
            aria-labelledby="modalEditerLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"> </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/actuSingle/{{ dbActu._id }}/?_method=PUT" method="POST">
                            <input type="text" name="title" contenteditable="true" value="{{dbuser.email}}">
                            <input type="text" name="date" contenteditable="true"
                                value="Modifier le : {{dbuser.createDate}}">
                            <input type="text" name="content" contenteditable="true" value="{{dbActu.content}}">
                            <div class="file">
                                <label class="file-label">
                                    <input class="file-input" type="file" name="image">
                                    <span class="file-cta">
                                        <span class="file-icon">
                                            <i class="fas fa-upload"></i>
                                        </span>
                                        <span class="file-label">
                                            Envoyer une nouvelle image au format .jpg .jpeg .gif uniquement
                                        </span>
                                    </span>
                                </label>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-sign" data-dismiss="modal">Fermer</button>
                                <button type="submit" class="btn btn-sign">Confirmer la modification</button>
                            </div>
                        </form>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>
</div>

<style>
    li {
        list-style: none;
    }
</style>
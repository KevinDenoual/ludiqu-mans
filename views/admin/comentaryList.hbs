<div class="container mt-3 ">
    <div class="row mt-3">
        <div>
            <div class="rating form-group">
                <div class="stars mb-2 mt-5">
                    <i class="far fa-star gold"></i>
                    <i class="far fa-star gold"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                </div>
                {{#each (reverse dbComentaryActu) }}
                <div class="list-item border border-warning rounded m-2 p-2">
                    <div>
                        <h5>{{ content }}</h5>
                    </div>

                    <div>
                        <p>{{ author }} , {{ createDate }}</p>
                    </div>
                </div>
                <div>
                    <button type="button" class="btn btn-sign" type="submit" data-toggle="modal"
                        data-target="#modalConfirmSuppComActuAdmin{{_id}}">Supprimer</button>
                    <button type="button" class="btn btn-sign" type="submit">Indiquer comme isVerified</button>
                </div>

                {{!-- modal confirmation suppression --}}
                <div class="modal fade" id="modalConfirmSuppComActuAdmin{{_id}}" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>Confirmez-vous la suppression du commentaire de {{ author }} ?</p>
                            </div>
                            <div class="modal-footer">
                                <form action="/comentaryList/{{ _id }}/?_method=delete" method="POST">
                                    <button type="submit" class="btn btn-sign">Oui</button>
                                </form>
                                <button type="button" data-dismiss="modal" aria-label="Close"
                                    class="btn btn-sign">Non</button>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each }}

            </div>
        </div>
    </div>
</div>
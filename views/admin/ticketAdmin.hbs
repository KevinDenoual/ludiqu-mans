<section class="item">


    <div class="border-bottom mx-auto " style="width: 40%;">
        <h1 class="text-center text-warning">Tickets Messages</h1>
    </div>
    <div class="container">
        <div class="row">

            <!-- GET -->
            <div class="col-md-12 col-sm-12">
                <ul class="list-group ">
                    {{#each dbContact }}
                    <li class="list-item border border-warning rounded m-2 p-3">
                        <div class="row">
                            <div class="col-md-3 col-sm-3  column">
                                <h3>{{ sujet }}</h3>
                            </div>
                            <div class="col-md-7 pt-4 col-sm-7">
                                <p>{{ email }} </p>
                                <p>message : {{ message }} </p>

                                <!-- BOUTTON SUPPRIMER -->
                                <button class="btn btn-actu" data-toggle="modal" type="subit"
                                    data-target="#modalConfirmSuppContact{{ _id }}">Supprimer</button>
                            </div>

                    </li>
                    {{!-- modal confirmation suppression --}}
                    <div class="modal fade" id="modalConfirmSuppContact{{ _id }}" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Confirmez-vous la suppression ?</p>
                                </div>
                                <div class="modal-footer">

                                    <form action="/ticketAdmin/{{ _id }}/?_method=DELETE" method="post">
                                        <button type="submit" class="btn btn-sign">Oui</button>
                                    </form>


                                    <button type="button" class="btn btn-sign">Non</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each }}
                </ul>
            </div>

        </div>
    </div>

    <div class="border-bottom mx-auto " style="width: 40%;">
        <h1 class="text-center text-warning">Tickets Suppport</h1>
    </div>
    <div class="container">
        <div class="row">
            <!-- GET -->
            <div class="col-md-12 col-sm-12">
                <ul class="list-group ">
                    {{#each dbSupport }}
                    <li class="list-item border border-warning rounded m-2 p-3">
                        <div class="row">
                            <div class="col-md-3 col-sm-3  column">
                                <h3>{{ sujet }}</h3>
                            </div>
                            <div class="col-md-7 pt-4 col-sm-7">
                                <p>{{email}} </p>
                                <p>message: {{ message }}</p>

                                <!-- BOUTTON SUPPRIMER -->
                                <button class="btn btn-actu" data-toggle="modal" type="subit"
                                    data-target="#modalConfirmSuppSupport{{ _id }}">Supprimer</button>

                            </div>

                    </li>
                    {{!-- modal confirmation suppression --}}
                    <div class="modal fade" id="modalConfirmSuppSupport{{ _id }}" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Confirmez-vous la suppression ?</p>
                                </div>
                                <div class="modal-footer">

                                    <form action="/ticketAdmin/{{ _id }}/?_method=DELETE" method="post">
                                        <button type="submit" class="btn btn-sign">Oui</button>
                                    </form>


                                    <button type="button" class="btn btn-sign">Non</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each }}
                </ul>
            </div>
        </div>
    </div>

</section>




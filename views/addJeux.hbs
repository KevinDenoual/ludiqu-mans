<div class="border-bottom mx-auto " style="width: 40%;">
    <h1 class="text-center jeux-color" >Cr√©er un jeu</h1>
</div>

<div class="container mt-3">
    <div class=" px-auto">
        <form action="" method="POST" enctype="multipart/form-data">
            <div class="form-row mx-auto">
                <label class="label">Titre du jeu</label>
                <div class="control">
                    <input class="input" type="text" name="title">
                </div>
            </div>

            <div class="form-row">
                <label class="label">Description</label>
                <div class="control">
                    <textarea class="textarea" name="description"></textarea>
                </div>
            </div>

            <div class="form-row">
                <label class="label">Auteur</label>
                <div class="control">
                    <input class="input" type="text" name="author">
                </div>
            </div>



            <div class="file">
                <label class="file-label">
                    <input class="file-input" type="file" name="image">
                    <span class="file-cta">
                        <span class="file-icon">
                            <i class="fas fa-upload"></i>
                        </span>
                        <span class="file-label">
                            Envoyer une image format jpg
                        </span>
                    </span>
                </label>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Enregistrer</button>
                </div>
                <div class="control">
                    <button class="button is-link is-light">Annuler</button>
                </div>
            </div>
        </form>

    </div>

</div>